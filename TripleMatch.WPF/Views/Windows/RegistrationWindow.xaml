<Window x:Class="TripleMatch.WPF.Views.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TripleMatch.WPF.Views.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="350" Width="500">
    <Grid>

        <Grid>

            <Border Style="{StaticResource MainBorder}" VerticalAlignment="Center" 
            HorizontalAlignment="Center">

                <Grid Style="{StaticResource GridInBorder}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1" 
                        Grid.Column="0"
                        Text="Nicname:"/>

                    <TextBox Text="{Binding RegistrationDto.FullName}"
                        Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Логин:"
                        Grid.Row="2" Grid.Column="0"/>

                    <TextBox Text="{Binding RegistrationDto.Email}"
                        Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Пароль:"
                        Grid.Row="3" Grid.Column="0"/>

                    <TextBox Text="{Binding RegistrationDto.Password}"
                        Grid.Row="3" Grid.Column="1"/>

                    <Button Command="{Binding RegisterCommand}"
                        Content="Зарегистрироваться"
                        Grid.Row="4" Grid.ColumnSpan="2"/>

                    <TextBlock Text="{Binding MessageVm.Message}"
                        Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                        TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
