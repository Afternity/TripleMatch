<Window x:Class="TripleMatch.WPF.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TripleMatch.WPF.Views.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource MainBorder}"
            Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"
            HorizontalAlignment="Right" Padding="5">

            <Grid Style="{StaticResource GridInBorder}">

                <Button Command="{Binding ShowProfileWindowCommand}"
                    Content="Профиль" Margin="0"/>

            </Grid>
        </Border>

        <Border Style="{StaticResource MainBorder}"
            Grid.Column="1" Grid.Row="1"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            
            <Grid Style="{StaticResource GridInBorder}">
                
                <Frame x:Name="NavigationFrame" />
                
            </Grid>
        </Border>
    </Grid>
</Window>
