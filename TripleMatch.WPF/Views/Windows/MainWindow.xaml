<Window x:Class="TripleMatch.WPF.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TripleMatch.WPF.Views.Windows"
        mc:Ignorable="d"
        Title="Triple Match - Match 3 Game" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Style="{StaticResource MainBorder}"
            Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"
            HorizontalAlignment="Stretch" Padding="5">

            <Grid Style="{StaticResource GridInBorder}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Triple Match - Соединяй 3 одинаковых!" 
                           FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Command="{Binding ShowProfileWindowCommand}"
                    Content="Профиль" Margin="10,0,0,0" Padding="0"/>

            </Grid>
        </Border>

        <!-- Основной контент -->
        <Border Style="{StaticResource MainBorder}"
            Grid.Column="1" Grid.Row="1"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            
            <Grid Style="{StaticResource GridInBorder}">

                <Grid Background="#F0F0F0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>

                    <!-- Игровое поле 9x9 -->
                    <Grid Grid.Column="0" Background="White" Margin="20">
                        <StackPanel VerticalAlignment="Top" Margin="0,0,0,10">
                            <TextBlock Text="Как играть:" FontSize="12" FontWeight="Bold" Foreground="#666"/>
                            <TextBlock Text="1. Нажми на фишку" FontSize="11" Foreground="#666"/>
                            <TextBlock Text="2. Нажми на соседнюю фишку" FontSize="11" Foreground="#666"/>
                            <TextBlock Text="3. Образуй линию из 3+" FontSize="11" Foreground="#666"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding GameBoardVm.Cells}" Margin="0,70,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="9" Rows="9"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, 
                                            Path=DataContext.CellClickedCommand}" 
                                            CommandParameter="{Binding}"
                                            Margin="2"
                                            FontWeight="Bold"
                                            FontSize="16"
                                            Cursor="Hand"
                                            ToolTip="Нажми здесь">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PieceType}" Value="Red">
                                                        <Setter Property="Background" Value="#FF6B6B"/>
                                                        <Setter Property="Content" Value="🔴"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PieceType}" Value="Blue">
                                                        <Setter Property="Background" Value="#4ECDC4"/>
                                                        <Setter Property="Content" Value="🔵"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PieceType}" Value="Green">
                                                        <Setter Property="Background" Value="#95E77D"/>
                                                        <Setter Property="Content" Value="🟢"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PieceType}" Value="Yellow">
                                                        <Setter Property="Background" Value="#FFE66D"/>
                                                        <Setter Property="Content" Value="🟡"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PieceType}" Value="Purple">
                                                        <Setter Property="Background" Value="#C7B3E5"/>
                                                        <Setter Property="Content" Value="🟣"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PieceType}" Value="Orange">
                                                        <Setter Property="Background" Value="#FFA500"/>
                                                        <Setter Property="Content" Value="🟠"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="BorderThickness" Value="4"/>
                                                        <Setter Property="BorderBrush" Value="#000"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FFD700" Opacity="1"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <!-- Панель информации -->
                    <Grid Grid.Column="1" Background="#E8E8E8" Margin="10">
                        <StackPanel VerticalAlignment="Top" Margin="10">
                            <TextBlock Text="📊 СТАТИСТИКА" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,15" Foreground="#333"/>

                            <TextBlock Text="🎯 Счёт:" FontSize="13" Margin="0,0,0,5" Foreground="#666"/>
                            <TextBlock Text="{Binding GameBoardVm.Score, StringFormat='{}+{0} очков'}" 
                                       FontSize="22" FontWeight="Bold" Foreground="#FF6B6B" 
                                       Margin="0,0,0,15" TextAlignment="Center"/>

                            <TextBlock Text="⏱️ Время:" FontSize="13" Margin="0,0,0,5" Foreground="#666"/>
                            <TextBlock Text="{Binding GameBoardVm.TimeRemaining, StringFormat='{}⏰ {0}c'}"
                                       FontSize="22" FontWeight="Bold" Foreground="#4ECDC4" 
                                       Margin="0,0,0,15" TextAlignment="Center"/>

                            <Border Background="#DDD" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                                <TextBlock FontSize="14" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="▶️ ИГРАЕМ"/>
                                            <Setter Property="Foreground" Value="#95E77D"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding GameBoardVm.IsGameOver}" Value="True">
                                                    <Setter Property="Text" Value="⏹️ КОНЕЦ ИГРЫ"/>
                                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <Button Command="{Binding RestartGameCommand}" 
                                    Content="🔄 Новая игра" 
                                    Padding="10,10" 
                                    Margin="0,0,0,15"
                                    Background="#4ECDC4"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    FontSize="12"/>

                            <Border Background="#FFF9E6" CornerRadius="5" Padding="8" BorderThickness="1" BorderBrush="#FFE66D">
                                <TextBlock Text="{Binding MessageVm.Message}" 
                                           TextWrapping="Wrap" 
                                           FontSize="11"
                                           Foreground="#333"/>
                            </Border>

                            <!-- Советы -->
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="💡 СОВЕТЫ:" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="• По 10 очков за фишку" FontSize="10" TextWrapping="Wrap"/>
                                <TextBlock Text="• Ищи линии 3, 4 или 5" FontSize="10" TextWrapping="Wrap"/>
                                <TextBlock Text="• Выбранная фишка светится" FontSize="10" TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>

            </Grid>
        </Border>

        <!-- Нижняя панель -->
        <TextBlock Grid.Row="2" Grid.Column="1" Text="© 2025 Triple Match Game | Получай бонусы за комбинации!" 
                   Foreground="#666" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
